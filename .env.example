# Carbon Aegis - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# PostgreSQL connection string - provided by Replit automatically
DATABASE_URL=postgresql://username:password@localhost:5432/carbon_aegis

# Session Configuration
# Secret key for session encryption - generate a secure random string
SESSION_SECRET=your-session-secret-key-here

# Application Configuration
NODE_ENV=development
PORT=5000

# Replit Configuration
# Your Replit domain - set automatically by Replit
REPLIT_DOMAINS=your-replit-domain.replit.app

# API Keys (Add as needed for integrations)
# OpenAI API key for AI features
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe for payment processing
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# SendGrid for email notifications
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Development Configuration
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=Carbon Aegis
VITE_APP_VERSION=1.0.0

# Security Configuration
# CORS origins - comma-separated list
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
# Bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=12

# File Upload Configuration
# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760
# Upload directory path
UPLOAD_DIR=uploads

# Email Configuration (Optional for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Third-party Integrations (Optional)
# CDP API for emissions factors
# CDP_API_KEY=your-cdp-api-key-here

# GRI API for sustainability standards
# GRI_API_KEY=your-gri-api-key-here

# TCFD API for climate disclosures
# TCFD_API_KEY=your-tcfd-api-key-here